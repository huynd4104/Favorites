{
  "manifest_version": 3,
  "name": "URL Favorites",
  "version": "1.0",
  "description": "Lưu và quản lý các URL yêu thích",
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "tabs",
    "tabCapture",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "URL Favorites"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}