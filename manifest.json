{
  "manifest_version": 3,
  "name": "URL Favorites",
  "version": "1.0",
  "description": "Lưu và quản lý các URL yêu thích",
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "tabs",
    "tabCapture",
    "scripting",
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "URL Favorites"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon16.png",
    "128": "icon16.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "fullscreen.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}